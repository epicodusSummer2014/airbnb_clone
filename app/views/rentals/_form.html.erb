<h2>Add a Rental</h2>

<%= form_for @rental, id: "new_rental", remote: true do |f| %>

  <div class="field"><%= f.label :address %><br />
  <%= f.text_field :address %></div>

  <div class="field"><%= f.label :city %><br />
  <%= f.text_field :city %></div>

  <div class="field"><%= f.label :state %><br />
    <%= f.text_field :state %></div>

  <div class="field"><%= f.label :price %><br />
    <%= f.text_field :price %></div>

  <div class="field"><%= f.label :bedrooms %><br />
    <%= f.text_field :bedrooms %></div>

  <div class="field"><%= f.label :description %><br />
    <%= f.text_field :description %></div>

  <div class="field"><%= f.label :rental_photo %><br />
    <%= f.file_field :rental_photo %></div>

  <div class="field"><%= f.label :start_date %><br />
    <%= f.date_field :start_date %></div>

  <div class="field"><%= f.label :end_date %><br />
    <%= f.date_field :end_date %></div>
  <div><%= f.submit "Publish Rental" %></div>
<% end %>
