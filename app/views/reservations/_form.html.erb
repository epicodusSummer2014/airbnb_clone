<h2>Reserve a Room</h2>

<%= form_for([@rental, @reservation]) do |f| %>

  <div class="field"><%= f.label :start_date %><br />
  <%= f.date_field :start_date %></div>

  <div class="field"><%= f.label :end_date %><br />
  <%= f.date_field :end_date %></div>

  <div><%= f.submit "Reserve Rental" %></div>
<% end %>
